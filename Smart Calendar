from datetime import datetime

# Get current date and time
current_datetime = datetime.now()
print("Current date and time:")
print(current_datetime)
print("Let's add a note to the calendar.")
# Get event details from the user
year = int(input("Enter year:\n"))
month = int(input("Enter month:\n"))
day = int(input("Enter day:\n"))
hour = int(input("Enter hour:\n"))
minute = int(input("Enter minute:\n"))
text = input("Enter a text:\n")

# Calculate time remaining until the event
event_datetime = datetime(year, month, day, hour, minute)
time_remaining = event_datetime - current_datetime

# Calculate days, hours, and minutes remaining
days_remaining = time_remaining.days
hours_remaining = time_remaining.seconds // 3600
minutes_remaining = (time_remaining.seconds % 3600) // 60

# Print the time remaining before the event
print(f"Before the event note \"{text}\" remains:")
print(f"{days_remaining} day(s), {hours_remaining} hour(s), and {minutes_remaining} minute(s).")
